// -*- mode: javascript; tab-width: 4; c-basic-offset: 4; indent-tabs-mode: nil; -*-

var slots = {};
var n = 10;
var assert = require ("assert");

exports["test timeout connectors"] = {
    
    run : function (cb) {
        for (var i = 0; i < n; i++) {
            twait setTimeout (mkevent (), 3 * Math.random ());
            slots[i] = 1;
        }
	    cb();
    },
    
    check : function () {
	    for (var i = 0; i < n; i++) {
	        assert.ok (slots[i], "slot[" + i + "] is set");
	    }
    }
};
