// -*- mode: javascript; tab-width: 4; c-basic-offset: 4; indent-tabs-mode: nil; -*-

"use strict";

var slots = {};
var n = 40;
var assert = require ("assert");

exports["test do..while..."] = {
    
    run : function (cb) {
	    var i = 0;	
	    do {
	        await { 
		        setTimeout (defer (), 1); 
		        setTimeout (defer (), 2); 
	        }
	        slots[i] = 1;
	        i++;
	    } while (i < n);
	    cb();
    },
    
    check : function () {
	    for (var i = 0; i < n; i++) {
	        assert.ok (slots[i], "slot[" + i + "] is set");
	    }
    }
};
